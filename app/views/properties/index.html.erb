<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<button class = 'btn'>
  <%= link_to 'New Property', new_property_path %>
</button>


<div class = 'properties'>
  <% @properties.each do |property| %>
    <%= link_to property do %>
      <div class = 'properties__block'>
        <img src = "assets/house.jpg" class = 'image'>
        <span class = 'properties__price'> $<%= property.price %> </span>
      </div>
      <div class = 'properties__address'>
        <%= property.address %>
      </div>
    <% end %>
  <% end %>


</div>

