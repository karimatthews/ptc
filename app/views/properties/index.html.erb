<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table>
  <thead>
    <tr>
      <th>Seller</th>
      <th>Price</th>
      <th>Settlement period</th>
      <th>Min deposit percent</th>
      <th>Address</th>
      <th>Time open</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.seller %></td>
        <td><%= property.price %></td>
        <td><%= property.settlement_period %></td>
        <td><%= property.min_deposit_percent %></td>
        <td><%= property.address %></td>
        <td><%= property.time_open %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

